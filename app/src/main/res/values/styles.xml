<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar Styles -->
    <style name="ToolbarTitleStyle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">@dimen/text_size_xl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_on_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextStyle.Heading1" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">@dimen/text_size_huge</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Heading2" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textSize">@dimen/text_size_xxl</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">@dimen/text_size_md</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="TextStyle.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">@dimen/text_size_sm</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="ButtonStyle.Primary" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:elevation">@dimen/elevation_sm</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
    </style>

    <style name="ButtonStyle.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/primary_purple</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">@dimen/corner_radius_md</item>
        <item name="strokeColor">@color/primary_purple</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Card Styles -->
    <style name="CardStyle.Elevated" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">@dimen/corner_radius_lg</item>
        <item name="cardElevation">@dimen/elevation_md</item>
        <item name="cardBackgroundColor">@color/surface_elevated</item>
    </style>

</resources> 